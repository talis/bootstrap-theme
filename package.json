{
  "name": "@talis/bootstrap-theme",
  "version": "0.0.1",
  "private": true,
  "description": "A theme to make Bootstrap look like Talis",
  "author": "dm@talis.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talis/bootstrap-theme.git"
  },
  "publishConfig": {
    "registry":"https://npm.pkg.github.com"
  },
  "bugs": {
    "url": "https://github.com/talis/bootstrap-theme/issues"
  },
  "homepage": "https://github.com/talis/bootstrap-theme#readme",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o docs/assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace docs/assets/css/talis.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css docs/assets/css/talis.css --content docs/index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output docs/assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve docs --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "release": "npm run standard-version",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "dependencies": {
    "bootstrap": "^5.0.0-beta3",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.2",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "standard-version": "9.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "yarn": "1.22.10"
  }
}
