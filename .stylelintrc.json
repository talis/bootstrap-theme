{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "selector-class-pattern": ["^[a-z_\\-0-9]+$"],
    "number-max-precision": [
      2,
      {
        "ignoreUnits": ["em"],
        "severity": "warning"
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function"
        ],
        "severity": "warning"
      }
    ],
    "no-descending-specificity": [
      true,
      {
        "severity": "warning"
      }
    ],
    "no-duplicate-selectors": [
      true,
      {
        "severity": "warning"
      }
    ],
    "function-no-unknown": [
      true,
      {
        "severity": "warning"
      }
    ],
    "import-notation": "less"
  }
}
